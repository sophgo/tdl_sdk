{
    "model_dir": "./models/",
    "frame_buffer_size": 1,
    "pipelines": [
      {
        "name": "consumer_counting",
        "nodes": {
          "video_node": {
            "video_type": "image_folder",
            "video_path": "./images",
            "is_loop": false
          },
          "object_detection_node": {
            "config_thresh": 0.5,
            "model" : "head_person_detection"
          },

          "consumer_counting_node": {
            "mode": 0, 
            "counting_gap": 30,
            "x1": 0,
            "y1": 500,
            "x2": 1900,
            "y2": 500,
            "_comment": "mode为0时, 对于竖直线, 从左到右为进入, 对于非竖直线, 从上到下为进入, mode为1相反"
          }

        }
      }
    ]
}